<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <TextView
        android:id="@+id/rankTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gatekeptbold"
        android:text="Rank"
        android:textAlignment="center"
        android:textColor="@color/white_wash"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/imageView2_container"
        android:layout_width="114dp"
        android:layout_height="99dp"
        android:background="@drawable/glow_border2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rankTextView"
        app:layout_constraintVertical_chainStyle="packed">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="94dp"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:elevation="4dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="0.7dp"
            app:srcCompat="@drawable/discordpic" />


    </FrameLayout>

    <TextView
        android:id="@+id/OtherUserNameView"
        android:layout_width="158dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gatekeptsemibold"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/white_wash"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2_container" />

    <TextView
        android:id="@+id/OtherUserScoreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gatekeptbold"
        android:text="Score"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/white_wash"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/OtherUserNameView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
