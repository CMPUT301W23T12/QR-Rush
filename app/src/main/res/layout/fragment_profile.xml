<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_wash"
    tools:context=".view.ProfileFragment">

    <ListView
        android:id="@+id/listy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sortingButton" />

    <ImageButton
        android:id="@+id/edit_name"
        android:layout_width="33dp"
        android:layout_height="42dp"
        android:backgroundTint="#00000000"
        android:scaleType="centerCrop"
        android:src="@drawable/editpr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="clip_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profileView"
            android:layout_width="166dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:onClick="profileButton"
            android:src="@drawable/discordpic" />

        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gatekeptbold"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#3c6f83"
            android:textColorHint="#3c6f83"
            android:textSize="35sp" />
    </LinearLayout>

    <Button
        android:id="@+id/sortingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutRank" />

    <LinearLayout
        android:id="@+id/linearLayoutScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutRank"
        app:layout_constraintEnd_toStartOf="@+id/linearLayoutRank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutRank"
        app:layout_constraintHorizontal_weight="1">

        <TextView
            android:id="@+id/scoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gatekeptsemibold"
            android:gravity="center"
            android:text="Score"
            android:textAlignment="center"
            android:textColor="#3c6f83"
            android:textColorHint="#3c6f83"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gatekept"
            android:text="SCORE"
            android:textAlignment="center"
            android:textColor="#3c6f83"
            android:textColorHint="#3c6f83"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayoutQRCodes"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutScore"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_weight="1">

        <TextView
            android:id="@+id/rankView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gatekeptsemibold"
            android:gravity="center"
            android:text="Rank"
            android:textAlignment="center"
            android:textColor="#3c6f83"
            android:textColorHint="#3c6f83"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/rankText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gatekept"
            android:text="RANK"
            android:textAlignment="center"
            android:textColor="#3c6f83"
            android:textColorHint="#3c6f83"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutQRCodes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutRank"
        app:layout_constraintEnd_toStartOf="@+id/linearLayoutMoney"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutRank"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutRank"
        app:layout_constraintHorizontal_weight="1">

        <TextView
            android:id="@+id/qrCodesView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gatekeptsemibold"
            android:gravity="center"
            android:text="QRCodes"
            android:textAlignment="center"
            android:textColor="#3c6f83"
            android:textColorHint="#3c6f83" />

        <TextView
            android:id="@+id/qrCodesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gatekept"
            android:text="QRCODES"
            android:textAlignment="center"
            android:textColor="#3c6f83"
            android:textColorHint="#3c6f83"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutMoney"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutRank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutQRCodes"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutRank"
        app:layout_constraintHorizontal_weight="1">

        <TextView
            android:id="@+id/moneyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gatekeptsemibold"
            android:gravity="center"
            android:text="Money"
            android:textAlignment="center"
            android:textColor="#3c6f83"
            android:textColorHint="#3c6f83"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/moneyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/gatekept"
            android:text="RUSH COINS"
            android:textAlignment="center"
            android:textColor="#3c6f83"
            android:textColorHint="#3c6f83"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>