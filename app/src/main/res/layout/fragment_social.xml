<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.SocialFragment">


    <EditText
        android:id="@+id/searchPlayer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:fontFamily="@font/gatekept"
        android:hint="Search a player..."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/searchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/refresh_player_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refreshing Player List..."
        android:textAlignment="center" />

    <TextView
        android:id="@+id/noPlayerFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gatekeptsemibold"
        android:text="No players found!"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textColorHint="#3c6f83"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/searchPlayerList"
        android:layout_width="409dp"
        android:layout_height="644dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/noPlayerFound"
        app:layout_constraintTop_toBottomOf="@+id/searchPlayer"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-14dp" />

</LinearLayout>

