<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/OtherUserNameLabelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/OtherUserNameView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/OtherUserNameLabelView"
        app:layout_constraintStart_toEndOf="@+id/OtherUserNameLabelView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_min="wrap"
        android:layout_marginStart="4dp"/>

    <TextView
        android:id="@+id/OtherUserScoreLabelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: "
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/OtherUserNameView"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/OtherUserScoreView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Score"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/OtherUserScoreLabelView"
        app:layout_constraintStart_toEndOf="@+id/OtherUserScoreLabelView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_min="wrap"
        android:layout_marginStart="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>