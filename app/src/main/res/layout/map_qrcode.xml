<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_dialog_background">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QR CODE"
        android:textSize="24sp"
        android:fontFamily="@font/gatekeptbold"
        android:textColor="#c7e1f8"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/hash_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hash: "
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:fontFamily="@font/gatekeptsemibold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#c7e1f8"


        />


    <ImageView
        android:id="@+id/hash_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

    </ImageView>

    <ListView
        android:id="@+id/users_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <ImageButton
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/custom_positive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/confirm_button_light_blue"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_gravity="end"
        android:layout_marginTop="15dp"
        />

</LinearLayout>
